  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git Story : Start",
      "type": "shell",
      "command": "git checkout `git log --reverse | if read a commit ; then echo $commit ; fi`",
      "windows": {
        "command": "git checkout `git log --reverse | if read a commit ; then echo $commit ; fi`"
      },
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Git Story : Next",
      "type": "shell",
      "command": "git checkout `git log --reverse --ancestry-path HEAD..master | head -n 1 | cut -d \\  -f 2`",
      "windows": {
        "command": "git checkout `git log --reverse --ancestry-path HEAD..master | head -n 1 | cut -d \\  -f 2`"
      },
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Git Story : Prev",
      "type": "shell",
      "command": "git checkout `git rev-parse --short HEAD^`",
      "windows": {
        "command": "git checkout `git rev-parse --short HEAD^`"
      },
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "Git Story : End",
      "type": "shell",
      "command": "git checkout master",
      "windows": {
        "command": "git checkout master"
      },
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}
